  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.12.16",
    "@babel/node": "^7.12.16",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.16",
    "autoprefixer": "^10.2.5",
    "aws-sdk": "^2.869.0",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.2",
    "body-parser": "^1.19.0",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "get-blob-duration": "^1.1.2",
    "helmet": "^4.4.1",
    "mini-css-extract-plugin": "^1.3.9",
    "mongoose": "^5.11.18",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "node-sass": "^5.0.0",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-github": "^1.1.0",
    "passport-kakao": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0",
    "postcss-loader": "^5.2.0",
    "pug": "^3.0.0",
    "sass-loader": "^11.0.1",
    "shx": "^0.3.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0"
  },
  "scripts": {
    "dev:server": "nodemon --exec babel-node src/init.js --delay 2 --ignore 'scss' ",
    "dev:assets": "cd src && cross-env WEBPACK_ENV=development && webpack -w",
    "build:assets": "cd src && cross-env WEBPACK_ENV=production && webpack",
    "build:server": "babel src --out-dir build --ignore 'src/assets','src/static','src/webpack.config.js'",
    "copyAll": "shx cp -r src/static build && shx cp -r src/views build",
    "build": "npm run build:server && npm run build:assets && npm run copyAll",
    "prebuild" : "rm -rf build",
    "start": "PRODUCTION=true node build/init.js",
    "prestart" : "npm run build"
  },

  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}
