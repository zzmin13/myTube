extends layouts/main

block content 
    .form-container 
        form.whole_form(action=routes.join, method="post")
            input.whole_fileUpload(type="text" name="name", placeholder="이름", required=true)
            input.whole_input(type="email", name="email", placeholder="이메일", required=true)
            input.whole_input(type="password", name="password", placeholder="비밀번호", required=true)
            input.whole_input(type="password", name="password2", placeholder="비밀번호 확인", required=true)
            input.whole_submitBtn(type="submit", value="Join Now")
        include partials/socialLogin
